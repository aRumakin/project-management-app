.boards {
  @apply flex flex-col items-center;

  & .boards-heading {
    @apply text-4xl;
  }

  & .board-item {
    @apply flex w-full py-2 border-2 border-indigo-500 justify-between;
  }

  & .board-button {
    @apply pointer-events-auto ml-8 rounded-md bg-indigo-600 py-2 px-3 text-[0.8125rem] font-semibold leading-5 text-white hover:bg-indigo-500;
  }
}
