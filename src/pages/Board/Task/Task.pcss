.task-wrapper {
  @apply flex justify-between items-center py-1 relative;

  & .task-delbttn {
    @apply text-[#787878] absolute top-0 right-1 translate-y-2;
  }

  & .task-content {
    @apply w-full h-8 bg-white shadow-sm rounded-sm pl-2;
  }

  & .task-del-icon {
    @apply w-6 h-6 hover:text-warning-500 active:text-warning-500 transition-all duration-200;
  }
}
