.column {
  @apply flex flex-col justify-between items-center w-48 mx-3 p-3 border-2 border-indigo-500;

  & .column-body {
    @apply flex flex-col py-3;
  }

  & .column-bttn {
    @apply pointer-events-auto rounded-md bg-indigo-600 py-2 px-3 my-1 text-[0.8125rem] font-semibold leading-5 text-white hover:bg-indigo-500;
  }

  & .column-buttons {
    @apply text-center;
  }
  & .column-body {
    @apply w-full;
  }
}
